{
  "id": "/product/frontend/apache",
  "instances": "3",
  "cpus": "0.2",
  "mem": "64",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "quay.io/gambol99/apache-php:latest",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 80, "hostPort": 0, "protocol": "tcp"},
        { "containerPort": 443, "hostPort": 0, "protocol": "tcp"}
      ]
    }
  },
  "args": [ "/usr/sbin/apache2ctl", "-D", "FOREGROUND" ],
  "env": {
    "NAME": "frontend",
    "ENVIRONMENT": "prod",
    "SERVICE_80_NAME": "frontend_http",
    "SERVICE_443_NAME": "frontend_https",
    "BACKEND_REDIS_CACHE": "statd;6379",
    "BACKEND_APP_SERVIECS": "backend;8080",
    "BACKEND_MYSQL_SLAVES": "mysql_slave;3307"
  },
  "ports": [
    80,
    443
  ],
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "dependencies": ["/product/db/database/slave", "/product/redis/stats" ]
}
