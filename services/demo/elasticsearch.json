{
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "quay.io/gambol99/elasticsearch:latest",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 9200, "hostPort": 0, "protocol": "tcp"},
        { "containerPort": 9300, "hostPort": 0, "protocol": "tcp"}
      ]
    },
    "volumes": [
      {
          "containerPath": "/usr/share/elasticsearch/config/elasticsearch.yml",
          "hostPath": "/config/prod/config/elasticsearch.conf",
          "mode": "RO"
      }
    ]
  },
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "args": [ "/bin/bash", "/startup.sh" ],
  "env": {
    "NAME": "elasticsearch",
    "ENVIRONMENT": "prod",
    "CLUSTER": "es-prod",
    "PLUGINS": "karmi/elasticsearch-paramedic",
    "SERVICE_DELAY": "10",
    "SERVICE_9200_NAME": "es_prod_client",
    "SERVICE_9300_NAME": "es_prod_peer"
  },
  "id": "/prod/elasticsearch/es-prod",
  "instances": 1,
  "cpus": 0.3,
  "mem": 256
}
