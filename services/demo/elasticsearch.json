{
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "dockerfile/elasticsearch",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 9200, "hostPort": 0, "protocol": "tcp"},
        { "containerPort": 9300, "hostPort": 0, "protocol": "tcp"}
      ]
    }
  },
  "volumes": [
    {
        "containerPath": "/etc/elasticsearch/elasticsearch.yml",
        "hostPath": "/config/prod/config/elasticsearch.yml",
        "mode": "RO"
    }
  ],
  "env": {
    "NAME": "elasticsearch",
    "ENVIRONMENT": "prod",
    "ELASTICSEARCH_CLUSTER_NANE": "es-prod",
    "SERVICE_DELAY": "10",
    "SERVICE_9200_NAME": "elasticsearch_client",
    "SERVICE_9300_NAME": "elasticsearch_peer"
  },
  "id": "/prod/elasticsearch",
  "instances": 1,
  "cpus": 0.2,
  "mem": 128
}
